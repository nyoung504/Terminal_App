#!/usr/bin/env ruby
require 'terminal-table'
require 'tty-prompt'
require 'colorize'
require 'byebug'

require_relative '../lib/menu'
require_relative '../lib/mel'
require_relative '../lib/destination_repo'

app = Menu.new

def help_docs
  puts "-l and --list"
  puts "shortcut to get to destinations list menu"
end

if ARGV[0] == "-h"
  help_docs
  exit
end

if ARGV[0] == "-l" || ARGV[0] == "--list"
  app.terminal_table
else
  app.router
end

